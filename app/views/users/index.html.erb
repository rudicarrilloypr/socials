<div class="container mt-5">
  <h1 class="mb-4">All Users</h1>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-12 mb-4">
        <div class="d-flex align-items-center">
          <div class="p-3">
            <!-- Puedes usar la gem 'gravatar_image_tag' para mostrar imÃ¡genes de perfil basadas en el email del usuario -->
            <img src="path_to_default_profile_pic.jpg" alt="Profile" class="img-thumbnail" style="width: 100px; height: 100px;">
          </div>
          <div class="flex-grow-1 p-3">
            <h4><%= link_to user.name, user_path(user) %></h4>
            <p><small><%= user.posts_counter %> posts</small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
